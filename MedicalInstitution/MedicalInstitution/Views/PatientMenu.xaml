<Window x:Class="MedicalInstitution.Views.PatientMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalInstitution.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="PatientMenu" Height="450" Width="800">
    <Grid>
        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                x:Name="btnPrijavi"
                materialDesign:ButtonAssist.CornerRadius="20"
                Visibility="{Binding Path=enablePrijavi}"
                IsEnabled="{Binding Path=prijavi}"
                IsDefault="True"
                Height="45"
                Panel.ZIndex="1"
                FontWeight="Bold"
                FontSize="18"
                Foreground="White"
                Width="150"
                Margin="10,10,0,0"
                Command="{Binding Login, UpdateSourceTrigger=PropertyChanged}">Prijavite se</Button>
    </Grid>
</Window>
